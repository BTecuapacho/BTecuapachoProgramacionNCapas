@model ML.Alumno
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.2.2/css/buttons.dataTables.css" />
<div class="container">
    <h2>Alumnos</h2>
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="border-bottom title-part-padding">
                    <h4 class="card-title my-2 text-center">Lista de Alumno</h4>
                </div>
                <div class="card-body">
                    @if (Model.Alumnos.Count != 0)
                    {
                        <div class="table-responsive">
                            <table id="usuarios" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-center" scope="col">#</th>
                                        <th class="text-center" scope="col">Nombre</th>
                                        <th class="text-center" scope="col">Sexo</th>
                                        <th class="text-center" scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int count = 0;}
                                    @foreach (ML.Alumno alumno in Model.Alumnos)
                                    {
                                        count++;
                                        <tr>
                                            <td class="text-center">
                                                @count
                                            </td>
                                            <td class="text-center">
                                                @alumno.Nombre @alumno.ApellidoPaterno @alumno.ApellidoMaterno
                                            </td>
                                            <td class="text-center">
                                                @if (alumno.Genero == "H")
                                                {
                                                    <span class="badge text-bg-primary">
                                                        <i class="bi bi-person-standing"> Masculino</i>
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge text-bg-danger">
                                                        <i class="bi bi-person-standing-dress"> Femenino</i>
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("Form", "Alumno", new { IdAlumno = alumno.IdAlumno })" class="rounded-circle btn btn-warning d-inline-flex align-items-center justify-content-center text-light m-1">
                                                    <i class="bi bi-pen-fill"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", "Alumno", new { IdAlumno = alumno.IdAlumno })" class="rounded-circle btn btn-danger d-inline-flex align-items-center justify-content-center" onclick="return confirm('Desea el liminar al alumno')">
                                                    <i class="bi bi-trash-fill m-1"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    }
                    else
                    {
                        <div class="mt-2 alert alert-danger" role="alert">
                            No se encontraron registros
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/bootstrap.js"></script>
