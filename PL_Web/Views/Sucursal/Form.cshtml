@model ML.Sucursal
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Form</h2>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card p-4 shadow">
                @using(Html.BeginForm("From", "Sucursal", FormMethod.Post, new { @enctype = "multipart/form-data", @onsubmit = ""}))
                {
                    @Html.HiddenFor(model => model.IdSucursal)
                    <div class="row">
                        <div class="col-md-4 col-sm-12">
                            @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                        </div>
                        <div class="col-md-4 col-sm-12">
                            @Html.LabelFor(model => model.Latitud, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Latitud, new { @class = "form-control", @disabled = "true" })
                        </div>
                        <div class="col-md-4 col-sm-12">
                            @Html.LabelFor(model => model.Longitud, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Longitud, new { @class = "form-control", @disabled = "true" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>